				<form:title>
					<core:Title text="Employee Details"></core:Title>
				</form:title>
				<form:content>
					<Label required="true" design="Bold" text="First Name"></Label>
					<Input value="{EmpDetail>/Fname}" placeholder="Please Enter First Name" width="40%"></Input>
